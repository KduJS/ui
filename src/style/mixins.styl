ellipsis() {
  overflow: hidden;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
  white-space: nowrap;
}

bounds($distance) {
  top: $distance;
  bottom: $distance;
  right: $distance;
  left: $distance;
}

overlay() {
  position: absolute;
  bounds(0);
}

flex-box() {
  display: flex;

  & > * {
    flex: auto 0 0;
  }
}

h-box() {
  flex-box();
  flex-direction: row;
}

v-box() {
  flex-box();
  flex-direction: column;
}

flex-control() {
  width: 0 !important;
}

box-center() {
  align-items: center;
  justify-content: center;
}

space-between-x($margin) {
  margin-right: $margin;

  &:last-child {
    margin-right: 0;
  }
}

space-between-y($margin) {
  margin-bottom: $margin;

  &:last-child {
    margin-bottom: 0;
  }
}

// Disable noisy browser styles
disable-focus-styles()
  outline none
  -webkit-tap-highlight-color rgba(255, 255, 255, 0)
  &::-moz-focus-inner
    border 0

// Buttons

button-colors($foreground, $background)
  color $foreground
  background $background
  &:not(.ghost)
    &:hover,
    .kdu-ui-dropdown.open .dropdown-trigger &
      background lighten($background, 25%)
    .kdu-ui-dark-mode .kdu-ui-dropdown.open .dropdown-trigger &
      background $kdu-ui-gray-600
      color $kdu-ui-white
      > .content
        > .button-icon
          svg
            fill $kdu-ui-white

    &:hover
      .kdu-ui-dark-mode .popover &
        background $kdu-ui-gray-800 !important
    &:active
      background darken($background, 8%)
  > .content
    > .button-icon
      svg
        fill $foreground
  > .kdu-ui-loading-indicator,
  > .content > .loading-secondary
    .animation
      border-right-color $foreground
  > .content > .tag-wrapper > .tag
    background $foreground
    color $background
    if $background is transparent
      color $kdu-ui-white
      .kdu-ui-dark-mode &
        color $kdu-ui-gray-800 !important
    .kdu-ui-high-contrast &
      background black !important
      color white !important
  &::before
    background $background

  &.kdu-ui-dropdown-button
    background transparent
    &:not(:hover)
      color $kdu-ui-gray-800
      .kdu-ui-dark-mode &
        color $kdu-ui-white !important
      > .content
        > .button-icon
          svg
            fill @color
            .kdu-ui-dark-mode &
              fill $kdu-ui-white !important

button-transitions()
  transition background .1s, color .1s
  > .content
    > .button-icon
      svg
        transition fill .1s

// Kdu text

kdu-ui-text-colors($c)
  color $c
  .kdu-ui-icon
    svg
      fill $c !important
  &.banner
    background lighten($c, 90%)
    .kdu-ui-dark-mode &
      background darken($c, 60%)
